<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_shape_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测到您的账号未关联手机，请关联手机后使用！" />

        <RadioGroup
            android:id="@+id/choice_box"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/has_phone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有手机账号"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/no_phone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未有手机账号"
                android:textColor="@color/black"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel_bindPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                />
            <Button
                android:id="@+id/comfirm_bindPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="确认"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>