<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_shape_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="请选择所保留的用户信息后使用！" />

        <RadioGroup
            android:id="@+id/choice_box"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/save_phone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保留手机账号用户信息"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/save_auth_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保留三方账号用户信息"
                android:textColor="@color/black"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel_bindPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                />
            <Button
                android:id="@+id/comfirm_bindPhone"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="确认"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>