<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape_bg"
    >
    <LinearLayout
        android:id="@+id/llDialogCommonParent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_text_color"
            android:text="清理缓存"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:id="@+id/ivDialogImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvDialogContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即清理"
            android:textColor="@color/dialog_content_color"
            android:textSize="14sp"
            />
        <LinearLayout
            android:id="@+id/llDialogCheckBoxParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            >
            <CheckBox android:id="@+id/cbDialogCheckBox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:duplicateParentState="true"
                android:background="@drawable/dialog_checkbox_bg"
                android:button="@null"
                />
            <TextView android:id="@+id/tvDialogCheckBoxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dialog_content_color"
                android:textSize="13sp"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvDialogCancel"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                android:background="@drawable/common_item_btn_green_bg"
                />

            <TextView
                android:id="@+id/tvDialogSure"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                android:background="@drawable/common_item_btn_green_bg"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvDialogCancel"
                android:layout_toEndOf="@+id/tvDialogCancel"
                android:layout_marginStart="9dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>