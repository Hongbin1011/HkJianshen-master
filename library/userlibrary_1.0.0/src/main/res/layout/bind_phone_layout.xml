<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/general_head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bind_phone_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:hint="请输入要绑定的手机账号"
            android:maxLength="20"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp16"
            android:textColorHint="@color/assist_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/dividing_line" />

        <EditText
            android:id="@+id/bind_password_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLength="20"
            android:maxLines="1"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp16"
            android:textColorHint="@color/assist_text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/dividing_line" />

        <Button
            android:id="@+id/bind_now_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/login_button"
            android:paddingBottom="@dimen/dp1"
            android:paddingTop="@dimen/dp1"
            android:text="立即绑定"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

    </LinearLayout>
</LinearLayout>